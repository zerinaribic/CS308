using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Windows.Forms;

namespace WindowsFormsApplication3
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }

        private void button1_Click(object sender, EventArgs e)
        {
            string s = textBox1.Text;
            string []seperated = s.Split(new [] {" "},StringSplitOptions.None);
            int[] arrayOfInts = new int[seperated.Length];
            for (int i = 0; i < seperated.Length; i++)
            {
                int temp=Convert.ToInt32(seperated[i].Trim());
                arrayOfInts[i] = temp;            
            }
            int sum = 0;
            for (int i = 0; i < arrayOfInts.Length; i++) {
                sum += arrayOfInts[i];
            }
            double avg = (double)sum / arrayOfInts.Length;
            string temp2 = avg.ToString();
            label1.Text = temp2;
        }

    }
}
